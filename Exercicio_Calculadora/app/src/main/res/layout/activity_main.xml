<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/viewval1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeiro Valor"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="3dp" />

    <EditText
        android:id="@+id/text_campvalor1"
        android:layout_width="376dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/viewValor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo Valor"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="138dp" />

    <EditText
        android:id="@+id/text_segundoValor"
        android:layout_width="376dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="169dp" />

    <Button
        android:id="@+id/somar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somar"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/subt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtrair"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/multiplic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiplicar"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/divisao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Divisao"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="299dp" />

    <EditText
        android:id="@+id/text_resultado"
        android:layout_width="377dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="318dp" />
</androidx.constraintlayout.widget.ConstraintLayout>